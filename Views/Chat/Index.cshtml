@{
    ViewData["Title"] = "Чат";
    if (User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
    }
}
@model IEnumerable<PracticeTK.DAL.Models.Message>
<html>
<head>
    <meta charset="utf-8" />
    <link type="text/css" rel="stylesheet" href="~/css/TableStyle.css" />
    <title>Чат</title>

</head>
<body>    
    <table>
        @foreach (var cur in Model)
        {
            <tr>
                <td>
                    @cur.Login;
                </td>
                <td>
                    @cur.Text;
                </td>
                <td>
                    @cur.Date.ToString();
                </td>
            </tr>
        }
    </table>
    <div class="jumbotron">
        <form method="post" action="~/Chat/Index">
            <div>
                <div>
                    <input type="text" name="Text" />
                </div>
                <div>
                    <input type="submit" value="Відправити" />
                </div>
            </div>

        </form>
    </div>
</body>
</html>